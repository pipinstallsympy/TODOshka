<Window x:Class="TODOshka.InsertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="InsertWindow" Height="170" Width="430"
        Icon="./Resources/icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <TextBlock
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Margin="10"
                FontWeight="Bold"
                >
                Добавление информации в БД
            </TextBlock>
        </Grid>
        
        <Grid Grid.Row="0" Grid.Column="0">
            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,8,2">Task:</TextBlock>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="0">
            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,2,8,0">Description:</TextBlock>
        </Grid>
        
        <Grid Grid.Row = "0" Grid.Column="1">
            <TextBox
                Height="17"
                Width="300"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="0,0,0,2"
                x:Name="TaskBox"
                >
            </TextBox>
        </Grid>
        <Grid Grid.Row = "1" Grid.Column="1">
            <TextBox
                Height="17"
                Width="300"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="0,4,0,0"
                x:Name = "DescriptionBox"
            >
            </TextBox>
            <Button
                Height="20"
                Width="50"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="6"
                Content="OK"
                Click="DataSendButton_Click"
                >
            </Button>
        </Grid>
    </Grid>
</Window>
